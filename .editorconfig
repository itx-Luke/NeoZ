# EditorConfig - https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# C/C++ files
[*.{c,cpp,cc,cxx,h,hpp,hxx}]
indent_size = 4

# QML files
[*.qml]
indent_size = 4

# CMake files
[CMakeLists.txt]
indent_size = 4

[*.cmake]
indent_size = 4

# YAML files (GitHub workflows)
[*.{yml,yaml}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# Shell scripts
[*.sh]
indent_size = 2

# Windows batch files
[*.{bat,cmd}]
end_of_line = crlf
